<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <OutputType>Exe</OutputType>
        <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
    </PropertyGroup>

    <Choose>
        <When Condition="$(Configuration) == 'Release'">
            <PropertyGroup>
                <CoverageBuildType>Release</CoverageBuildType>
            </PropertyGroup>
        </When>
        <Otherwise>
            <PropertyGroup>
                <CoverageBuildType>Debug</CoverageBuildType>
            </PropertyGroup>
        </Otherwise>
    </Choose>

    <ItemGroup>
        <Compile Include="Config.fs" />
        <Compile Include="Fuzzer.fs" />
        <Compile Include="Interop.fs" />
        <Compile Include="Docker.fs" />
        <Compile Include="FuzzerMessage.fs" />
        <Compile Include="FuzzerInteraction.fs" />
        <Compile Include="Program.fs" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\VSharp.Generator\VSharp.Generator.fsproj" />
      <ProjectReference Include="..\VSharp.IL\VSharp.IL.fsproj" />
      <ProjectReference Include="..\VSharp.SILI.Core\VSharp.SILI.Core.fsproj" />
      <ProjectReference Include="..\VSharp.TestGenerator\VSharp.TestGenerator.fsproj" />
      <ProjectReference Include="..\VSharp.Utils\VSharp.Utils.fsproj" />
    </ItemGroup>

    <ItemGroup Condition=" $([MSBuild]::IsOSPlatform('Linux')) ">
        <Content Include="..\VSharp.CoverageInstrumenter\cmake-build-$(CoverageBuildType)\libvsharpCoverage.so">
            <Link>libvsharpConcolic.so</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup Condition=" $([MSBuild]::IsOSPlatform('OSX')) ">
        <Content Include="..\VSharp.CoverageInstrumenter\cmake-build-$(CoverageBuildType)\libvsharpCoverage.dylib">
            <Link>libvsharpConcolic.dylib</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup Condition=" $([MSBuild]::IsOSPlatform('Windows')) ">
        <Content Include="..\VSharp.CoverageInstrumenter\cmake-build-$(CoverageBuildType)\libvsharpCoverage.dll">
            <Link>libvsharpConcolic.dll</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="FSharp.Core" Version="7.0.0" />
    </ItemGroup>

</Project>
